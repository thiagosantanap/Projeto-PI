<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/grad_bg"
    tools:context=".PrincipalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Principal"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/button_Deslogar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Deslogar"/>

    <Button
        android:id="@+id/button_storage_download"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Storage Download"/>

    <Button
        android:id="@+id/button_storage_upload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Storage Upload"/>

    <Button
        android:id="@+id/button_database_ler"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Database Ler Dados"/>

    <Button
        android:id="@+id/button_database_alterar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Database Gravar-Alterar-Excluir"/>

    <Button
        android:id="@+id/button_usuarios"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="UsuÃ¡rios"/>

</LinearLayout>